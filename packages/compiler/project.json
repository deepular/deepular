{
  "name": "compiler",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "packages/compiler/src",
  "projectType": "library",
  "targets": {
    "build": {
      "executor": "@nx/rollup:rollup",
      "outputs": [
        "{options.outputPath}"
      ],
      "options": {
        "outputPath": "dist/{projectRoot}",
        "main": "{projectRoot}/src/index.ts",
        "rollupConfig": "{workspaceRoot}/packages/rollup.config.cjs",
        "project": "{projectRoot}/package.json",
        "tsConfig": "{projectRoot}/tsconfig.lib.json",
        "additionalEntryPoints": [
          "{projectRoot}/src/install.ts"
        ],
        "sourcemap": true,
        "format": [
          "esm"
        ],
        "external": "all",
        "generateExportsField": true,
        "compiler": "tsc"
      }
    },
    "test": {
      "executor": "@nx/vite:test",
      "outputs": ["{options.reportsDirectory}"],
      "options": {
        "passWithNoTests": true,
        "reportsDirectory": "../../coverage/{projectRoot}"
      }
    },
    "release": {
      "command": "release-it --config={projectRoot}/.release-it.json"
    },
    "lint": {
      "executor": "@nx/linter:eslint",
      "outputs": ["{options.outputFile}"],
      "options": {
        "lintFilePatterns": [
          "packages/compiler/**/*.ts",
          "packages/compiler/package.json"
        ]
      }
    }
  },
  "tags": ["compiler"]
}
