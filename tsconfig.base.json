{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "strict": true,
    "noImplicitOverride": true,
    "emitDecoratorMetadata": false,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "experimentalDecorators": true,
    "strictPropertyInitialization": false,
    "useDefineForClassFields": false,
    "importHelpers": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "target": "es2022",
    "module": "esnext",
    "lib": ["esnext", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@ngkit/client": ["packages/client/src/index.ts"],
      "@ngkit/compiler": ["packages/compiler/src/index.ts"],
      "@ngkit/core": ["packages/core/src/index.ts"],
      "@ngkit/dev": ["packages/dev/src/index.ts"],
      "@ngkit/server": ["packages/server/src/index.ts"],
      "@ngkit/testing": ["packages/testing/src/index.ts"]
    }
  },
  "exclude": ["node_modules", "tmp"],
  "angularCompilerOptions": {
    "enableI18nLegacyMessageIdFormat": false,
    "strictInjectionParameters": true,
    "strictInputAccessModifiers": true,
    "strictTemplates": true,
    "disableTypeScriptVersionCheck": true
  },
  "reflection": true
}
